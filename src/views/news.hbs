<!doctype html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="styles.css">
    <title>{{title}}</title>
</head>
<body>
<h2>{{description}}</h2>
<div id="articles">
    {{#each items}}
        <div class="article">
            <h3>{{this.title}}</h3>
            {{{this.description}}}
        </div>
    {{/each}}
</div>
</body>
</html>